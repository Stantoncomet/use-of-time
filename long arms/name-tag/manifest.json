{
    "manifest_version": 2,
    "name": "Name Tag",
    "version": "1.0",
  
    "description": "Rename tab title",
  
    "icons": {
      "48": "icon.png"
    },

    "permissions": ["activeTab"],

    "browser_action": {
      "default_icon": "icon.png",
      "default_title": "Name Tag",
      "default_popup": "popup.html"
    },
  
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["namer.js"]
      }
    ],

    "applications": { "gecko": { "id": "name-tag@stantoncomet" } }
  }
  